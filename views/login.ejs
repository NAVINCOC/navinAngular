    <!-- End of Registeration modal -->

    <!-- login modal  -->
    <div id="login_modal" style="display:none;">
      <div class="col-sm-12 tAlignCenter bColorCCC lineHeight41 font">
        <span>Login</span>
      </div>
      <div class="col-sm-12">
        <div class="col-sm-12 height25"></div>
        <form name="modalLoginForm" id="modalLoginForm" method="post">
          <div class="col-sm-12 font">
            <div class="col-sm-12"><span>Email</span></div>
            <div class="col-sm-12">
              <div class="input-group">
                <div class="input-group-addon"><i class="fa fa-envelope" aria-hidden="true"></i></div> 
                <input type="text" class="form-control " id="modalEmailLogin" name="loginEmail" onfocusout="emailValidate('#modalEmailLogin', 'modalLoginForm');" />
              </div>
            </div>
            <div class="col-sm-12">
              <span class="error" id="errorEmailLogin"></span>
              <span class="success" id="successEmailLogin"></span>
            </div>
          </div>
          <div class="col-sm-12 font">
            <div class="col-sm-12"><span>Password</span></div>
            <div class="col-sm-12">
              <div class="input-group">
                <div class="input-group-addon"><i class="fa fa-key" aria-hidden="true"></i></div> 
                <input type="password" class="form-control" id="modelPasswordLogin" name="loginPassword" />
              </div>
            </div>
          </div>
          <div class="col-sm-12 height25"></div>
          <div class="col-sm-12 font">
            <div class="col-sm-5 col-sm-offset-1">
              <input type="button" class="btn btn-primary form-control" id="modalLoginBtn" name="Login" value="Login" onclick="validateLogin('#modalLoginForm');" />
            </div>
            <div class="col-sm-5">
              <input type="button" class="btn btn-warning form-control" value="Cancel" onclick="closeModal('#inputModalClose');">
              <span class="hide"><a id="inputModalClose" rel="modal:close" href="#">Cancel</a></span>
            </div>
          </div>
          <div class="col-sm-12 height11"></div>
          <div class="col-sm-12 font tAlignCenter" id="forget">
            <span>Having trouble in LogIn <a href="#forget-modal" rel="modal:open" class="tColorBlue">Click Here</a></span>
          </div>
          <div class="col-sm-12 height25"></div>
        </form>
      </div>     
    </div>

    <!-- Forget modal  -->
    <div id="forget-modal" style="display: none;">
      <div class="col-sm-12 tAlignCenter bColorCCC lineHeight41 font">
        <span>Send Password</span>
      </div>
      <div class="col-sm-12">
        <div class="col-sm-12 height25"></div>
        <div class="col-sm-12 font">
          <div class="col-sm-12"><span>Email</span></div>
          <div class="col-sm-12">
            <div class="input-group">
              <div class="input-group-addon"><i class="fa fa-envelope" aria-hidden="true"></i></div> 
              <input type="text" class="form-control " id="forgetEmail" name="forgetEmail"/>
            </div>
          </div>
          <div class="col-sm-12"><span class="error" id="errorForgetEmail"></span></div>
        </div>
        <div class="col-sm-12 height20"></div>
        <div class="col-sm-12 font">
          <div class="col-sm-5 col-sm-offset-1">
            <input type="button" class="btn btn-primary form-control" name="Submit" value="Mail Me"/>
          </div>
          <div class="col-sm-5">
            <input type="button" class="btn btn-warning form-control" value="Cancel" onclick="closeModal('#forgetModalClose');">
            <span class="hide"><a id="forgetModalClose" rel="modal:close" href="#">Cancel</a></span>
          </div>
        </div>
        <div class="col-sm-12 height25"></div>
      </div>
    </div>
    <script src='min/js/jQuery.min.js'></script>
    <script src="js/jquery.modal.js"></script>
    <script src="js/service.js"></script>
    <script src="js/login.js"></script>
  </body>
</html>
