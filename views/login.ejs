  <body class="loginBody">
    <div class="col-sm-12 font tColorWhite">
      <div class="col-sm-12 height11"></div>
      <div class="col-sm-6">        
        <h2>Polestar Solutions</h2>
      </div>
      <!-- login form -->
      <form name="loginForm" id="loginForm" method="post">
        <div class="col-sm-6 font tColorWhite">
          <div class="col-sm-5  paddingLeft0">
            <div class="col-sm-12"><span>Email</span></div>
            <div class="col-sm-12">
              <div class="input-group">
                <div class="input-group-addon"><i class="fa fa-envelope" aria-hidden="true"></i></div> 
                <input id="loginEmail" type="text" name="loginEmail" class="form-control " onfocusout="emailValidate('#loginEmail', 'loginForm')" value="<%=email%>"/>
              </div>
            </div>
            <div class="col-sm-12">
              <span class="error" id="errorEmail"></span>
              <span class="success" id="successEmail"><% if(error!==''){ %>Email verified <% } %></span>
            </div>
          </div>
          <div class="col-sm-5 paddingLeft0">
            <div class="col-sm-12"><span>Password</span></div>   
            <div class="col-sm-12">
              <div class="input-group">
                <div class="input-group-addon"><i class="fa fa-key" aria-hidden="true"></i></div> 
                <input type="password" id="loginPassword" name="loginPassword" class="form-control" />
              </div>
            </div>
            <div class="col-sm-12"><span class="error" id="errorLoginPassword"><%=error%></span></div>
          </div>
          <div class="col-sm-2 paddingLeft0 paddingRight0">
            <div class="col-sm-12 height20"></div>
            <div class="col-sm-12">
              <input type="button" class="btn btn-primary form-control" id="loginBtn" name="Login" value="Login" onclick="validateLogin('#loginForm');" />
            </div>
          </div>
        </div>
      </form>
    </div>

    <div id="mainpage">
      <div class="col-sm-12 tColorWhite font tAlignCenter">
        <div class="col-sm-12">
          <h1>Web Developement - Custom Application - Bussiness Application</h1>
        </div>
        <div class="col-sm-12">
          <h1>Welcome Home</h1>
        </div>
        <div class="col-sm-12">
          <span><a href="#register-modal" rel="modal:open" class="tColorBlue">Register Now</a></span>
        </div>
        <div class="col-sm-12 height11"></div>
        <div class="col-sm-12">
          <span>Already registered user please <a href="#login_modal" rel="modal:open" class="tColorBlue">Login</a> here</span>
        </div>
      </div>
    </div>

    <!-- registeration modal -->
    <div id="register-modal" class="heightAuto width65" style="display:none;">
      <div class="col-sm-12 tAlignCenter bColorCCC lineHeight41 font">
        <strong>Sign Up</strong>
      </div>
      <div class="col-sm-12">
        <div class="col-sm-12">
          <form method="post" id="registerForm" name="registerForm">
            <div class="col-sm-12 height20"></div>
            <div class="col-sm-12 font">
              <div class="col-sm-4">
                <div class="col-sm-12"><span>Email</span></div>
                <div class="col-sm-12">
                  <div class="input-group">
                    <div class="input-group-addon"><i class="fa fa-envelope" aria-hidden="true"></i></div> 
                    <input type="text" class="form-control" id="registerEmail" name="registerEmail"  onfocusout="emailValidate('#registerEmail', 'registerForm')" />
                  </div>
                </div>
                <div class="col-sm-12"><span class="error" id="errorEmailR"></span></div>
              </div>
              <div class="col-sm-4">
                <div class="col-sm-12"><span>Password</span></div>
                <div class="col-sm-12">
                  <div class="input-group">
                    <div class="input-group-addon"><i class="fa fa-key" aria-hidden="true"></i></div> 
                    <input type="password" class="form-control " id="registerPassword" name="registerPassword"/>
                  </div>
                </div>
                <div class="col-sm-12"><span class="error" id="errorRegisterPassword"></span></div>
              </div>
              <div class="col-sm-4">
                <div class="col-sm-12"><span>Confirm Password</span></div>
                <div class="col-sm-12">
                  <div class="input-group">
                    <div class="input-group-addon"><i class="fa fa-key" aria-hidden="true"></i></div> 
                    <input type="password" class="form-control " id="confirmRegisterPassword" name="confirmRegisterPassword"/>
                  </div>
                </div>
                <div class="col-sm-12"><span class="error" id="errorConfirmPassword"></span></div>
              </div>
            </div>
            <div class="col-sm-12 height11"></div>
            <div class="col-sm-12 font">
              <div class="col-sm-4">
                <div class="col-sm-12"><span>Address Line 1</span></div>
                <div class="col-sm-12">
                  <div class="input-group">
                    <div class="input-group-addon"><i class="fa fa-pencil" aria-hidden="true"></i></div>
                    <input type="text" class="form-control" id="address1" name="address1"/>
                  </div>
                </div>
                <div class="col-sm-12"><span class="error" id="errorAddress"></span></div>
              </div>
              <div class="col-sm-4">
                <div class="col-sm-12"><span>Address Line 2</span></div>
                <div class="col-sm-12">
                  <div class="input-group">
                    <div class="input-group-addon"><i class="fa fa-pencil" aria-hidden="true"></i></div>
                    <input type="text" class="form-control" id="adress2" name="address2"/>
                  </div>
                </div>
              </div>
              <div class="col-sm-4">
                <div class="col-sm-12"><span>Address Line 3</span></div>
                <div class="col-sm-12">
                  <div class="input-group">
                    <div class="input-group-addon"><i class="fa fa-pencil" aria-hidden="true"></i></div>
                    <input type="text" class="form-control" id="address3" name="address3"/>
                  </div>
                </div>
              </div>
            </div>  
            <div class="col-sm-12 height11"></div>
            <div class="col-sm-12 font">
               <div class="col-sm-4">
                <div class="col-sm-12"><span>Pin Code</span></div>
                <div class="col-sm-12">
                  <div class="input-group">
                    <div class="input-group-addon"><i class="fa fa-qrcode" aria-hidden="true"></i></div>
                    <input class="form-control" type="text" name="pincode" id="pincode" maxlength="6">
                  </div>
                </div>
                <div class="col-sm-12"><span class="error" id="errorPincode"></span></div>
              </div>
             <!-- <div class="col-sm-4">
                <div class="col-sm-12"><span>Country</span></div>
